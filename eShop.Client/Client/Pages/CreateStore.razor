@page "/CreateStore"
@using eShop.Client.Client.Components

<h2>Create Store Form</h2>

<EditForm Model="_store" OnValidSubmit="Create" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="name" class="col-md-2 col-form-label">Name:</label>
        <div class="col-md-10">
            <InputText id="name" class="form-control" @bind-Value="_store.Name" />
            <ValidationMessage For="@(() => _store.Name)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="description" class="col-md-2 col-form-label">Url:</label>
        <div class="col-md-10">
            <InputText id="description" class="form-control" @bind-Value="_store.Url" />
            <ValidationMessage For="@(() => _store.Url)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="brand" class="col-md-2 col-form-label">Address:</label>
        <div class="col-md-10">
            <InputText id="brand" class="form-control" @bind-Value="_store.Address" />
            <ValidationMessage For="@(() => _store.Address)" />
        </div>
    </div>

      <div class="form-group row">
        <label for="brand" class="col-md-2 col-form-label">Country:</label>
        <div class="col-md-10">
            <InputText id="brand" class="form-control" @bind-Value="_store.Country" />
            <ValidationMessage For="@(() => _store.Country)" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>
</EditForm>
